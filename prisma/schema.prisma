generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  papers Paper[]
}

model Paper {
  id        Int     @id @default(autoincrement())
  paperId   String  @unique
  content   String
  title     String
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  md5       String
}
